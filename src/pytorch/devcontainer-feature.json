{
    "name": "PyTorch",
    "id": "pytorch",
    "version": "1.0.0",
    "description": "Installs PyTorch. Requires python installed in the container.",
    "options": {
        "pt_version": {
            "type": "string",
            "enum": [                
                "2.0.1",
                "2.0.0",
                "1.13.1"
            ],
            "default": "2.0.1",
            "description": "Choose the version of PyTorch to install."
        },
        "cuda_version": {
            "type": "string",
            "enum": [
                "cpu",
                "cu117",
                "cu118",
                "cu121"
            ],
            "default": "cpu",
            "description": "Choose the CUDA version to support"
        },
        "install_torchvision":{
            "type": "boolean",
            "default": true,
            "description": "Install torchvision"
        },
        "install_torchaudio": {
            "type": "boolean",
            "default": true,
            "description": "Install torchaudio"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/python"
    ]
}
