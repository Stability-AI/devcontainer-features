{
    "sourceInformation": {
        "source": "devcontainer-cli"
    },
    "features": [
        {
            "name": "PyTorch",
            "id": "pytorch",
            "version": "0.1.0",
            "description": "Installs PyTorch",
            "options": {
                "pt_version": {
                    "type": "string",
                    "enum": [
                        "nightly",
                        "v2.0.1",
                        "v2.0.0",
                        "v1.13.1"
                    ],
                    "default": "v2.0.1",
                    "description": "Choose the version of PyTorch to install."
                },
                "cuda_version": {
                    "type": "string",
                    "enum": [
                        "cpu",
                        "cu117",
                        "cu118",
                        "cu121"
                    ],
                    "default": "cpu",
                    "description": "Choose the CUDA version to support, if any"
                },
                "install_torchvision": {
                    "type": "boolean",
                    "default": true,
                    "description": "Install torchvision"
                },
                "install_torchaudio": {
                    "type": "boolean",
                    "default": true,
                    "description": "Install torchaudio"
                }
            },
            "installsAfter": [
                "ghcr.io/devcontainers/features/python"
            ]
        }
    ]
}